{
  "name": "ekio-academy",
  "version": "1.0.0",
  "description": "EKIO Academy - R & Data Science for Economics and Urban Analysis",
  "keywords": ["R", "economics", "data-science", "Brazil", "urban-economics", "education", "quarto"],
  "author": "EKIO Analytics",
  "license": "MIT",
  "homepage": "https://academy.ekio.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/viniciusoike/ekioacademy.git"
  },
  "scripts": {
    "build": "npm run build:css && quarto render",
    "build:en": "quarto render --profile default",
    "build:pt": "quarto render --profile portuguese", 
    "build:css": "sass custom.scss assets/css/ekio-theme.css --style compressed",
    "watch": "sass --watch custom.scss assets/css/ekio-theme.css --style expanded",
    "preview": "quarto preview",
    "preview:en": "quarto preview --profile default",
    "preview:pt": "quarto preview --profile portuguese",
    "dev": "concurrently \"npm run watch\" \"npm run preview\"",
    "clean": "rm -rf _site _site-pt .quarto _combined"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "concurrently": "^8.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}